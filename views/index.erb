<ul>
  <% @files.each do |file| %>
  <li>
    <a href="<%= file %>"><%= file %></a>
    <form class="inline" method="get" action="<%= file %>/edit">
      <button type="submit">edit</button>
    </form>
    <form class="inline" method="post", action="<%= file %>/delete">
      <button type="submit">delete</button>
    </form>
  </li>
  <% end %>
</ul>

<div>
  <a href="/document/new">New document</a>
</div>

<% if @user %>
<div class="user-status">
  Logged in as <%= @user %>.
</div>
<form class="inline" method="post" action="/users/sign_out">
  <button type="submit">Sign out</button>
</form>
<% else %>

  <a href="/users/sign_in">Sign In</a>
</form>
<% end %>
